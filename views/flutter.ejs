<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Checkout</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <style>
      #parent {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }
    </style>
  </head>
  <body  onload="doSomething()">
    <div class="container" id="parent">
      <div id="child" class="text-center">
        
        <button class="btn btn-warning" style="color: white;">
          Redirecting..
        </button>
        <!-- <button class="btn btn-warning" href="/start">
          click to pay with card
        </button> -->
      </div>
   
    
   
    <script src="https://checkout.flutterwave.com/v3.js"></script>
    <script>
      const amount = document.getElementById('amount')
      const doSomething = () => {
        // var user = ;
        // alert(user)
        FlutterwaveCheckout({
          public_key: "<%= public_key %>",
          tx_ref: Date.now(),
          amount: '2499',
          currency: "NGN",
          payment_options: "card, banktransfer, ussd",
          redirect_url: "/redirect_flutterewave", //https://web.soozmarket.com/user/myactivity
          meta: {
            consumer_id: 23,
            consumer_mac: "92a3-912ba-1192a",
          },
          customer: {
            email: "<%= payerEmail %>",
            phone_number: "<%= userPhone %>",
            name:"<%= userName %>",
          },
          customizations: {
            title: "X Cash-Flow Accelerator",
            description: "Deposit to your SoozMarket Account",
            logo: "/images/uchman_logo.png",
          },
        });
      };
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
